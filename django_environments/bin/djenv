#!/usr/bin/env python2
# -*- coding: utf-8 -*-

import click

from django_environments import commands


@click.group()
def cli():
    pass


@click.command(help='Create a new environment')
@click.argument('name')
def new(name):
    try:
        commands.new(name)
    except Exception as e:
        print e.message


@click.command(help='List all created environments')
def list():
    try:
        commands.list()
    except Exception as e:
        print e.message


cli.add_command(new)
cli.add_command(list)

if __name__ == '__main__':
    cli()
